<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="ro.bar.sanymotors.model.impl.CategoryImpl" table="category">
		<id name="elementId">
			<column name="elementid" />
			<generator class="increment" />
		</id>

		<!-- properties bellow -->
		<property name="name" column="name" />
		
		<bag name="posts" lazy="false" cascade="delete-orphan" inverse="false"  table="post">
			<key column="category_fk" />    
        	<one-to-many class="ro.bar.sanymotors.model.impl.PostImpl" />
		</bag>
		
		
	</class>


</hibernate-mapping>